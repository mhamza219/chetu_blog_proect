<div class="cart-wrapper">
  <h1>Shopping Cart</h1>
  
  <% @cart.line_items.each do |item| %>
    <div class="item">
      <%= item.product.title %> - 
      <%= item.quantity %> x <%= number_to_currency(item.product.price / 100.0) %>
    </div>
  <% end %>

  <div class="actions">
    <p>Total: <%= number_to_currency(@cart.total_price / 100.0) %></p>
    
    <%= button_to "Checkout with Stripe", stripe_checkout_path(cart_id: @cart.id), 
        method: :post, 
        data: { turbo: false }, 
        class: "stripe-button" %>
  </div>
</div>