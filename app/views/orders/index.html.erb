<div class="container mt-5">
  <h2 class="mb-4">Your Order History</h2>

  <% if @orders.any? %>
    <div class="table-responsive">
      <table class="table table-hover border">
        <thead class="thead-light">
          <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Stripe Payment ID</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>#<%= order.id %></td>
              <td><%= order.created_at.strftime("%B %d, %Y") %></td>
              <td><%= number_to_currency(order.total / 100.0) %></td>
              <td>
                <span class="badge badge-<%= order.status == 'paid' ? 'success bg-success text-white px-2 py-1' : 'warning bg-warning text-dark px-2 py-1' %>">
                  <%= order.status.capitalize %>
                </span>
              </td>
              <td>
                <% if order.transactions.any? %>
                  <code class="small"><%= order.transactions.last.stripe_id %></code>
                <% else %>
                  <span class="text-muted">N/A</span>
                <% end %>
              </td>
              <td><%= link_to "View", order_path(order), class: "btn btn-sm btn-outline-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-5">
      <p class="text-muted">You haven't placed any orders yet.</p>
      <%= link_to "Start Shopping", root_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>